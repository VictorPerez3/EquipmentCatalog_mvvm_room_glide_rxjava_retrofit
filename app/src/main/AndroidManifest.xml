<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.equipmentcatalog_mvvm_room_glide_rxjava_retrofit">

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".application.EquipCatalogApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.EquipmentCatalogApp">
        <activity
            android:name=".view.activities.SplashActivity"
            android:configChanges="orientation"
            android:exported="true"
            android:theme="@style/Theme.EquipmentCatalogApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.NewEquipActivity"
            android:configChanges="orientation"
            android:exported="false"
            android:label="Add Equipment"
            android:theme="@style/Theme.EquipmentCatalogApp.NoActionBar" />
        <activity
            android:name=".view.activities.MainActivity"
            android:exported="true" />
    </application>

</manifest>